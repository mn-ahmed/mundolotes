<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pos_config_view_form_inherit_ip" model="ir.ui.view">
            <field name="name">pos.config.view.form.advanced_pos_reports</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='accounting_section']" position="after">
                    <h2>Reportes</h2>
                    <div class="row mt16 o_settings_container" id="posbox_reference">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="alphabot_pos_category_summary"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="alphabot_pos_category_summary"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="alphabot_pos_location_summary"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="alphabot_pos_location_summary"/>
                            </div>
                        </div>
                       <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="alphabot_pos_order_summary"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="alphabot_pos_order_summary"/>
                            </div>
                        </div>
                       <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="alphabot_pos_payment_summary"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="alphabot_pos_payment_summary"/>
                            </div>
                        </div>
                       <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="alphabot_pos_product_summary"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="alphabot_pos_product_summary"/>
                            </div>
                        </div>
                       <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="alphabot_pos_session_summary"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="alphabot_pos_session_summary"/>
                            </div>
                        </div>
                      </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>